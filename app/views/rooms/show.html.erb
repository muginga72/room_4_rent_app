<p style="color: green"><%= notice %></p>

<div id="user_session" class="pages_index_background">
  <div class="container">
  <h1 id="list_users" class="display-4 text-center text-muted">Room Detalis</h1>

  <%= render @room, partial: 'shared/deleteModal' %>

  <div style="margin-bottom: 20px;">
