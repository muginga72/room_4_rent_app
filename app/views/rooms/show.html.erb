<p style="color: green"><%= notice %></p>

<div id="room_details" class="pages_index_background">
  <div class="container">
    <h1 id="room_details" class="display-4 text-center">Room Details</h1>
    
    <%= render @room %>

    <div>
      <%= link_to "Edit", edit_room_path(@room), class: "btn btn-primary" %> |
      <%= link_to "Back", rooms_path, class: "btn btn-secondary" %> |

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Delete
    </button>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Confirmation</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Are you sure you want to delete this room?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <%= button_to "Delete", @room, method: :delete, class: "btn btn-danger my-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
