<div class="modal" id="<%= "myModal-#{room.id}" %>">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header bg-info">
        <h4 class="modal-title">Are you sure?</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <!-- Modal body -->
      <div class="modal-body bg-secondary">
      <p>Are you sure you want to delete the room with address:<%= room.room_address %>?</p>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer bg-outline-danger">
      <%= button_to("Delete", "/rooms/#{room.id}", method: :delete, class: "btn btn-outline-danger", 
      data: { "bs-dismiss" => "modal" })  %>
      <button type="button", class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>         
      </div>
    </div>
  </div>
</div>